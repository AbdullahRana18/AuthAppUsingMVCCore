@model List<AUTHAPP.Areas.Identity.Data.APPUser>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2 class="text-primary">Manage Registered Users</h2>
    <table class="table table-bordered table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@($"{user.FirstName} {user.LastName}")</td>
                    <td>
                        <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
