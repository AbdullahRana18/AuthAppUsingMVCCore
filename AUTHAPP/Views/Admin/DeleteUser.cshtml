@model AUTHAPP.Areas.Identity.Data.APPUser

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h2 class="text-danger">Delete User</h2>
        <p class="mb-3">Are you sure you want to delete this user?</p>

        <dl class="row">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">User Name</dt>
            <dd class="col-sm-9">@Model.UserName</dd>
        </dl>

        <form asp-action="DeleteUserConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
